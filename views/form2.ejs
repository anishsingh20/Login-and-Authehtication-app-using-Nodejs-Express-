<body>
<style>
body{
    font-family: 'Lobster', cursive;
  }
</style>
  <center>
<h1>Shop Online</h1>
</center>
<hr>
<br>
<br>

<div class="container">
  <form  action= "/saveform"  method="POST" >
    <legend>Personal Details</legend>
    <div class="form-group">
      <label>Name</label>
      <input type="text" class="form-control"  placeholder="Enter Name" name="Uname">
      <br>

      <label for="exampleInputEmail1">Email address</label>
      <input type="email" class="form-control"  placeholder="Enter email" name="email">

    </div>
    <div class="form-group">
      <label >Phone</label>
      <input type="text" class="form-control" placeholder="Phone" name="phone">
    </div>
    <br>
    <br>
  <!--Address Details -->
  <legend>Delivery Address</legend>
    <div class="form-group">
      <label for="exampleTextarea">Address</label>
      <textarea class="form-control" rows="3" name="address"></textarea>
    </div>

    <div class="form-group">
      <label >Post Code</label>
      <input type="text" class="form-control" placeholder="Postal Code" name="post">
    </div>

    <div class="form-group">
      <label >Country</label>
      <input type="text" class="form-control" placeholder="Country" name="country">
    </div>

<br>
<br>
    <!--card details-->

    <fieldset class="form-group">
      <legend>Card Details</legend>
      <div class="form-check">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="options" id="optionsRadios1" value="VISA" checked>
          VISA
        </label>
      </div>
      <div class="form-check">
      <label class="form-check-label">
          <input type="radio" class="form-check-input" name="options" id="optionsRadios2" value="AmEx">
          Am Ex
        </label>
      </div>
      <div class="form-check disabled">
      <label class="form-check-label">
          <input type="radio" class="form-check-input" name="options" id="optionsRadios3" value="MasterCard">
        MasterCard        </label>
      </div>
    </fieldset>


    <div class="form-group">
      <label >Card Number</label>
      <input type="text" class="form-control" placeholder="Card Number" name="card">
    </div>

    <div class="form-group">
      <label >Security Code</label>
      <input type="text" class="form-control" placeholder="Security Code" name="code">
    </div>

    <div class="form-group">
      <label >Name of Card</label>
      <input type="text" class="form-control" placeholder="name on Card" name="cardname">
      <br>
      <br>
      
        <!-- <div class="form-group">
          <label for="exampleTextarea">Reviews</label>
          <textarea placeholder="Add Your Reviews" class="form-control" rows="3"   name="review"></textarea>

        </div> -->

        <br>
        <br>




    <button type="submit" class="btn btn-primary">Submit</button>
    <br>
  </form>
</div>




</body>
</html>
